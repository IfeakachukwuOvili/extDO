{
  "manifest_version": 3,
  "name": "Schedule Sidebar Extension",
  "version": "1.0.0",
  "description": "A minimal, persistent sidebar task manager for your browser.",
  "permissions": [
    "storage"
  ],
  "optional_permissions": [
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "externally_connectable": {
    "matches": ["https://www.googleapis.com/*"]
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css", "sidebar.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

